<div>
  <%= flash[:notice] %>
</div>

<h1>Books</h1>
  <table>
  <tr>
  <!--見出し（th）-->
  <th>title</th>
  <th>body</th>
  <!--行の指定(tr)ここまで-->
  </tr>

<!--全部表示-->
<% @books.each do |book| %>

  <!--行の指定(tr)ここから-->
  <tr>
  <!--表のデータをいれる(td)-->
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td><%= link_to "show" , book_path(book) %></td>
  <td><%= link_to "edit" , edit_book_path(book) %></td>
  <td><%= link_to "Destroy" , book_path(book), method: :delete, data: { confirm: "Are you sure?" } %></td>
  <!--行の指定(tr)ここまで-->
  </tr>
  <% end %>
  </table>

<h1>New book</h1>
<!--エラーメッセージの表示-->
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

<!--book（リスト）を持ってくる-->
<%= form_with model: @book do |f| %>

<p>title</p>
<!----titleの記入-->
<%= f.text_field :title %>

<p>body</p>
<!----bodyの記入-->
<%= f.text_area:body %>
<!--投稿ボタンの追加-->
<%= f.submit "Create Book" %>

<% end %>